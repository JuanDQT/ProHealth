<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".InicioActivity">

    <TextView
        android:id="@+id/tvSangre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Sangre"
        android:textColor="#E91E63"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/tvNivel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Nivel"
        android:textColor="#2196F3"
        android:textSize="18sp"
         />

    <EditText
        android:id="@+id/et_sangre"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="120dp"
        android:ems="10"
        android:layout_gravity="center_horizontal"
        android:hint="Valor de sangre"
        android:inputType="number|textPersonName"
         />

    <Button
        android:id="@+id/btn_calcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:drawableLeft="@android:drawable/ic_menu_edit"
        android:text="Calcular" />

    <Button
        android:id="@+id/btnCambiarVentana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:drawableLeft="@android:drawable/ic_menu_week"
        android:text="Ir a calendario" />

    <Button
        android:id="@+id/btnEstadisticas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@android:drawable/ic_menu_sort_by_size"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:text="Estadisticas" />

    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
         />

</LinearLayout>