<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PreinicioActivity">

    <TextView
        android:id="@+id/tvInit"
        android:layout_width="341dp"
        android:layout_height="65dp"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/cocogoose"
        android:text="Por favor, introduce el nivel de dosis inicial"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_nivel"
        android:layout_width="220dp"
        android:layout_height="101dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Introduce el nivel de dosis"
        android:inputType="number|textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvInit" />

    <Button
        android:id="@+id/btnINR"
        android:layout_width="220dp"
        android:layout_height="47dp"
        android:layout_marginTop="10dp"
        android:text="Guardar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_nivel" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="341dp"
        android:layout_height="167dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnINR"
        app:layout_constraintVertical_bias="0.050000012"
        app:srcCompat="@drawable/coagutest" />

</androidx.constraintlayout.widget.ConstraintLayout>